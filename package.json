{
  "name": "matrix-react-sdk",
  "version": "0.0.1",
  "description": "SDK for matrix.org using React",
  "author": "matrix.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/matrix-org/matrix-react-sdk"
  },
  "license": "Apache 2",
  "main": "build/index.js",
  "scripts": {
    "build:js": "jsx src/ build",
    "start:js": "jsx -w src/ build --source-map-inline",
    "build:css": "catw 'css/**/*.css' -o bundle.css -c uglifycss --no-watch",
    "start:css": "catw 'css/**/*.css' -o bundle.css -v",
    "build": "npm run build:js && npm run build:css",
    "start": "parallelshell 'npm run start:js' 'npm run start:css'"
  },
  "dependencies": {
    "react-loader": "^1.4.0",
    "flux": "^2.0.3",
    "matrix-js-sdk": "0.0.4",
    "react": "^0.13.0"
  },
  "devDependencies": {
    "catw": "^1.0.1",
    "parallelshell": "^1.1.1",
    "react-tools": "^0.13.3",
    "uglifycss": "0.0.15"
  }
}
